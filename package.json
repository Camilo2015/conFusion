{
  "name": "confusion",
  "version": "1.0.0",
  "description": "This is a website for Ristorante Con Fusion",
  "main": "index.html",
  "scripts": {
    "start": "npm run watch:all",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lite": "lite-server", 
    "scss": "node-sass -o css/ css/", 
    "stylus": "stylus -w \"css/*.styl\" -o \"css/style_st.css\"", 
    "watch:stylus": "onchange \"css/*.styl\" --npm run stylus",  
    "watch:scss": "onchange \"css/*.scss\" -- npm run scss", 
    "watch:all": "parallelshell \"npm run watch:scss\" \"npm run lite\" "
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "lite-server": "^2.2.2",
    "onchange": "^4.0.0",
    "parallelshell": "^3.0.2"
  },
  "dependencies": {
    "bootstrap": "^4.0.0-alpha.6",
    "font-awesome": "^4.7.0"
  }
}
